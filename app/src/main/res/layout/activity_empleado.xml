<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnVolver"
        style="@style/EstiloBotonMorado"
        android:layout_width="104dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:background="@xml/borde_redondeado"
        android:onClick="volverAtras"
        android:text="&lt;- Volver"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="CÃ¡lculo de pago liquido"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etHonorarios"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="#E7E0EC"
        android:hint="Honorarios"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="calcularPago"
        android:text="Calcular Pago"
        android:visibility="visible"
        android:background="@xml/borde_redondeado"
        style="@style/EstiloBotonMorado"/>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text=""
        android:textSize="20sp"
        android:visibility="visible"
        android:textColor="#000000"/>
</LinearLayout>